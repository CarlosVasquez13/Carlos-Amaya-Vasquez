---
import "../styles/global.css";

interface Link {
    href: string;
    text: string;
}

var links: Link[] = [
    { href: "/#about", text: "Sobre Mí" },
    { href: "/projects", text: "Proyectos" },
    { href: "/#contact", text: "Contacto" },
];

---
<nav class="bg-gray-800 p-4">
    <div class="container mx-auto flex justify-between items-center">
        <a href="/" class="text-blue-400 text-2xl font-extrabold">Carlos Amaya Vásquez</a>
        <ul class="flex space-x-4 text-xl">
            {links.map((link) => (
            <li>
                <a href={link.href} class="text-blue-400
                    font-semibold hover:text-amber-50">{link.text}</a>
            </li>
            ))};
        </ul>
    </div>
</nav>